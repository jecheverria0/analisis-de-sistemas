@model SistemaContable.Models.Cuenta

@{
    ViewData["Title"] = "Eliminar Cuenta";
}

<h1>Eliminar Cuenta</h1>

<h3>¿Está seguro que desea eliminar esta cuenta?</h3>
<div>
    <h4>Cuenta</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TipoCuenta)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoCuenta)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Banco)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Banco)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Numcuenta)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Numcuenta)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tipomoneda)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tipomoneda)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MontoApertura)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MontoApertura)
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="CuentaId" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Cancelar</a>
    </form>
</div>
